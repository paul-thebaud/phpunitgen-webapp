{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/ts/*"
      ]
    }
  },
  "include": [
    "resources/ts/**/*"
  ]
}
